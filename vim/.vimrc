let g:powerline_pycmd="py3"

syntax on

set number
set relativenumber

set display+=lastline
set encoding=utf-8
set linebreak
set scrolloff=1
set sidescrolloff=5
set wrap


set laststatus=2
set ruler
set wildmenu
set tabpagemax=50
set mouse=a

set title

set backspace=indent,eol,start

set backupdir=~/.cache/vim
set dir=~/.cache/vim
set noswapfile

set history=1000

set spell
