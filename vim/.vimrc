let g:powerline_pycmd="py3"

syntax on

set number
set relativenumber
set autoindent
set shiftwidth=4
set smarttab
set tabstop=4

set hlsearch
set ignorecase
set incsearch
set smartcase

set display+=lastline
set encoding=utf-8
set linebreak
set scrolloff=1
set wrap

set ruler
set visualbell
set title

set backupdir=~/.cache/vim
set dir=~/.cache/vim
set noswapfile

set history=1000

set spell
